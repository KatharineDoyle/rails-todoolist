<%= form_for(@task) do |t| %>
<div class="form-group">
  <% t.label :name %>
  <%= t.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= t.label :details %>
  <%= t.text_field :details, class: 'form-control' %>
</div>

  <%= t.check_box :completed %>
  <%= t.submit class: 'btn btn-primary'  %>

<% end %>
</div>
