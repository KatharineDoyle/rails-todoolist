<%= form_for @task, remote: true do |t| %>
<div class="form-group">
  <% t.label :name %>
  <%= t.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= t.label :details %>
  <%= t.text_field :details, class: 'form-control' %>
</div>
  <%= t.label :completed, task.name %>
  <%= t.check_box :completed %>
  <%= t.submit 'Update', class: 'btn btn-primary'  %>
<% end %>
</div>



