<h2>My To Do List</h2>

<div class="new-task-box">
<input type="text" id="myInput" placeholder="Title...">
<%= link_to "+ Add a new task", new_task_path %>
</div>

  <ul>
    <% @tasks.each do |task| %>
    <li>
     <% if task.completed == true %>

     <%= "Completed task" %>
     <p> <%= link_to task.name, task_path(task[:id]) %></p>
     <% else %>
     <%= "Incomplete tasks" %>
     <p> <%= link_to task.name, task_path(task[:id]) %></p>
     <% end %>
     <p><%= link_to "Edit", task_path(task[:id]), method: :edit %></p>
     <p><%= link_to "Delete", task_path(task[:id]), method: :delete %></p>
   </ul>
   <% end %>

 </ul>
